<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="titlesize" format="integer" />
    <attr name="titlecolor" format="color" />
    <attr name="s_title" format="string" />
    <attr name="subtitle_size" format="integer" />
    <attr name="subtitlecolor" format="reference" />
    <attr name="showback" format="boolean" />
    <attr name="showmenu" format="boolean" />

    <declare-styleable name="toolbarWidget">
        <attr name="title" />
        <attr name="titlesize" />
        <attr name="titlecolor" />
        <attr name="s_title" />
        <attr name="subtitle_size" />
        <attr name="subtitlecolor" />
        <attr name="showback" />
        <attr name="showmenu" />
        <attr name="leftnav" format="reference"/>
        <attr name="rightnav" format="reference"/>
    </declare-styleable>

    <declare-styleable name="dropDownEdittext">
        <attr name="hint" format="string"/>
        <attr name="hint_color" format="color"/>
    </declare-styleable>


    <declare-styleable name="WaveView">
        <attr name="wlv_borderWidth" format="dimension"/>
        <attr name="wlv_borderColor" format="color"/>
        <attr name="wlv_progressValue" format="integer"/>
        <attr name="wlv_shapeType" format="enum">
            <enum name="circle" value="0" />
            <enum name="square" value="1" />
        </attr>
        <attr name="wlv_waveColor" format="color"/>
        <attr name="wlv_waveAmplitude" format="float"/>
        <attr name="wlv_titleTopSize" format="dimension"/>
        <attr name="wlv_titleCenterSize" format="dimension"/>
        <attr name="wlv_titleBottomSize" format="dimension"/>
        <attr name="wlv_titleTopColor" format="color"/>
        <attr name="wlv_titleCenterColor" format="color"/>
        <attr name="wlv_titleBottomColor" format="color"/>
        <attr name="wlv_titleTop" format="string"/>
        <attr name="wlv_titleCenter" format="string"/>
        <attr name="wlv_titleBottom" format="string"/>
    </declare-styleable>

    <declare-styleable name="MonthBar">
        <attr name="under_line_height" format="dimension" />
        <attr name="top_bottom_padding" format="dimension"/>
        <attr name="left_right_padding" format="dimension"/>
        <attr name="moth_size" format="dimension"/>
        <attr name="month_color" format="color" />
        <attr name="year_size" format="dimension"/>
        <attr name="year_color" format="color"/>
    </declare-styleable>


</resources>